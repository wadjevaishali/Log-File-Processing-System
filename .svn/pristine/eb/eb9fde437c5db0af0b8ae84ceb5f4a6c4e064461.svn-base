		// long tsDiff = currentTimestamp.getTime()
		// - initialTimestamp.getTime();
		// System.out.println("Program execution time: " + tsDiff);
	}

}

class LogProcess implements Runnable {
	public static int count = 0;

	private static String reading;

	private static synchronized String getReading() {
		return reading;
	}

	private static String processing;

	private static synchronized String getProcessing() {
		return processing;
	}

	private static String writing;

	private static synchronized String getWriting() {
		return writing;
	}

	Path _path;

	public LogProcess(Path path) {
		_path = path;
	}

	@Override
	public void run() {
		try {
			// Reading
			System.out.println(_path.toString() + " is reading.");

			while (getReading() != null) {
			}

			reading = _path.toString();
			List<String> readLines = Files.readAllLines(
					Paths.get(_path.toString()), StandardCharsets.UTF_8);
			while (getProcessing() != null) {
			}

			reading = null;

			// Processing
			// System.out.println(path.toString() + " has " +
			// lines.size()
			// + " lines.");
			System.out.println(_path.toString() + " is processing");

			processing = _path.toString();
			List<String> processedLines = getProcessedLines(readLines);

			while (getWriting() != null) {
			}

			processing = null;

			// Writing
			System.out.println(_path.toString() + " is writing.");

			writing = _path.toString();
			writeLinesToFile(_path, processedLines);
			writing = null;

		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	private static List<String> getProcessedLines(List<String> lines) {
		for (int i = 0; i < lines.size(); i++) {
			StringBuilder sb = new StringBuilder();
			lines.set(i, sb.append(++count).append(".").append(lines.get(i))
					.toString());
		}

		return lines;
	}

	private static void writeLinesToFile(Path path, List<String> lines) {
		try {
			Files.write(path, lines, StandardOpenOption.CREATE);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
